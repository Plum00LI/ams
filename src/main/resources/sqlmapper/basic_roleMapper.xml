					edit_time,
				</if>
				<if test="flgDelete != null">
					flg_delete,
				</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
				<if test="roleId != null">
					#{roleId},
				</if>
				<if test="roleCode != null">
					#{roleCode},
				</if>
