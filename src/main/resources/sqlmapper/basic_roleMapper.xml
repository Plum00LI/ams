    <!--删除-->
	<delete id="delete" parameterType="java.util.HashMap">
		delete from `basic_role`
		<where>
            <if test="roleId != null">
                and role_id=#{roleId}
            </if>
            <if test="roleId == null">
                and 1 = 0
            </if>
		</where>
	</delete>

    <!--更新-->
	<update id="update" parameterType="java.util.HashMap">
		update `basic_role`
		<trim prefix="set" suffixOverrides=",">
				<if test="roleId != null">
					role_id=#{roleId},
				</if>
				<if test="roleCode != null">
					role_code=#{roleCode},
				</if>
				<if test="roleName != null">
					role_name=#{roleName},
				</if>
				<if test="remark != null">
					remark=#{remark},
				</if>
				<if test="createUserName != null">
					create_user_name=#{createUserName},
				</if>
				<if test="createTime != null">
					create_time=#{createTime},
				</if>
				<if test="editUserName != null">
					edit_user_name=#{editUserName},
				</if>
				<if test="editTime != null">
					edit_time=#{editTime},
				</if>
				<if test="flgDelete != null">
					flg_delete=#{flgDelete},
				</if>
		</trim>
		<where>
            <if test="roleId != null">
                and role_id=#{roleId}
            </if>
            <if test="roleId == null">
                and 1 = 0
            </if>
		</where>
	</update>

    <!--固定条件查询-->
	<select id="select" parameterType="java.util.HashMap"
		resultType="java.util.LinkedHashMap">
			select 
				role_code as "roleCode",
				role_name as "roleName",
				remark as "remark",
				create_user_name as "createUserName",
				create_time as "createTime",
				role_id as "roleId"
			from `basic_role`
			<where>
					<if test="roleId != null">
						and role_id=#{roleId}
					</if>
					<if test="roleCode != null">
						and role_code=#{roleCode}
					</if>
					<if test="roleName != null">
						and role_name=#{roleName}
					</if>
					<if test="remark != null">
						and remark=#{remark}
					</if>
					<if test="createUserName != null">
						and create_user_name=#{createUserName}
					</if>
					<if test="createTime != null">
						and create_time=#{createTime}
					</if>
					<if test="editUserName != null">
						and edit_user_name=#{editUserName}
					</if>
					<if test="editTime != null">
						and edit_time=#{editTime}
					</if>
					<if test="flgDelete != null">
						and flg_delete=#{flgDelete}
					</if>
			</where>
			<if test="orderStr != '' and orderStr != null">
				order by ${orderStr}
			</if>
            <if test="start != null and pageSize != null">
                limit #{start},#{pageSize}
            </if>
		
		
	</select>

